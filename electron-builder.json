{
   "appId": "com.sekadev.copyvault",
    "productName": "copyvault",
    "directories": {
      "output": "release/"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!.github",
      "!.vscode",
      "!.code-workspace",
      "!.npmrc",
      "!*.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!_config.yml",
      "!angular.json",
      "!tsconfig*.json",
      "!tslint.json",
      "!.eslintrc.json",
      "!karma.conf.js",
      "!angular.webpack.js",
      "!*.map"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
}
