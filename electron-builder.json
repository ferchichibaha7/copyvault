{
   "appId": "com.sekadev.copyvault",
    "productName": "copyvault",
    "files": [
      "main.js",
      "dist"
    ],
    "win": {
      "icon": "dist/assets/icons",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
  "mac": {
    "icon": "dist/assets/icons",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": ["AppImage"]
  }
}
